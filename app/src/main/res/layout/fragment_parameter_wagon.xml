<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.smgr.ParameterWagonFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:padding="@dimen/frag_smgr_default_padding">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/imageIdContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/wagonPhotoUrl"
                        android:layout_width="@dimen/frag_param_wagon_image_width"
                        android:layout_height="@dimen/frag_param_wagon_image_height" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </HorizontalScrollView>


            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Fragments_Smgr_Item_Layout"
                android:gravity="center">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Header"
                    android:paddingStart="@dimen/frag_smgr_header_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_header_paddingEnd"
                    android:text="@string/txtView_model" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonModel"
                    style="@style/Fragments_Smgr_Static_Header" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_property" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonProperty"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text"
                    android:hint="@string/txtView_property" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_specialization" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonSpecialization"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_material" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonMaterial"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text"
                    android:textSize="@dimen/frag_param_wagon_header_txt_size" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_factory" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonFactory"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_capacity" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonCapacity"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Value_Text"
                    android:paddingStart="@dimen/frag_param_wagon_value_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_param_wagon_value_txt_paddingEnd"
                    android:text="@string/txtView_capacity_unit" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_tare_min" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonTareMin"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Value_Text"
                    android:paddingStart="@dimen/frag_param_wagon_value_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_param_wagon_value_txt_paddingEnd"
                    android:text="@string/txtView_tare_min_unit" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_tare_max" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonTareMax"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Value_Text"
                    android:paddingStart="@dimen/frag_param_wagon_value_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_param_wagon_value_txt_paddingEnd"
                    android:text="@string/txtView_tare_max_unit" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_tare_min_exp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonTareMinExp"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Value_Text"
                    android:paddingStart="@dimen/frag_param_wagon_value_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_param_wagon_value_txt_paddingEnd"
                    android:text="@string/txtView_tare_min_exp_unit" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_length" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonLength"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Value_Text"
                    android:paddingStart="@dimen/frag_param_wagon_value_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_param_wagon_value_txt_paddingEnd"
                    android:text="@string/txtView_length_unit" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_num_axles" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonNumAxles"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_axial_load" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonAxialLoad"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Value_Text"
                    android:paddingStart="@dimen/frag_param_wagon_value_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_param_wagon_value_txt_paddingEnd"
                    android:text="@string/txtView_axial_load_unit" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_volume" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonVolume"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Value_Text"
                    android:paddingStart="@dimen/frag_param_wagon_value_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_param_wagon_value_txt_paddingEnd"
                    android:text="@string/txtView_volume_unit" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_bogie" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonBogie"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_size" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonSize"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_year_release" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonYearOfRelease"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_year_end_release" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonYearEndOfRelease"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_service_life" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonServiceLife"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat style="@style/Fragments_Smgr_Item_Layout">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/Fragments_Smgr_Static_Text"
                    android:paddingStart="@dimen/frag_smgr_static_txt_paddingStart"
                    android:paddingEnd="@dimen/frag_smgr_static_txt_paddingEnd"
                    android:text="@string/txtView_long" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/wagonLong"
                    style="@style/Fragments_Smgr_Static_Text.Dynamic_Text" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>